@model Plywood.Group
@{
  ViewBag.Title = "Delete Group";
}
<div class="breadcrumbs">
  @Html.ActionLink("Groups", "Index", "Groups") >
  @Html.ActionLink(Model.Name, "Details", "Groups", new { id = Model.Key }, null)
  > Delete
</div>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm("Delete", "Groups", FormMethod.Post))
{
  @Html.ValidationSummary(true)
  @Html.ValidationMessage("Error")
  <fieldset>
    <legend>Group Details</legend>
    <input type="hidden" name="id" value="@Model.Key" />
    <div class="display-label">
      Name
    </div>
    <div class="display-field">
      @Model.Name
    </div>
    <p>
      <input type="submit" value="Delete" />
      @Html.ActionLink("Cancel", "Details", new { id = Model.Key })
    </p>
  </fieldset>
}
