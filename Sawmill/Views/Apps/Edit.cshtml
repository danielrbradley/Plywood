@model Plywood.Sawmill.Models.AppDetails
@{
  ViewBag.Title = "Edit App";
}
<div class="breadcrumbs">
  @Html.ActionLink("Groups", "Index", "Groups")
  >
  @Html.ActionLink(Model.Group.Name, "Details", "Groups", new { id = Model.Group.Key }, null)
  >
  @Html.ActionLink("Apps", "Index", "Apps", new { gid = Model.Group.Key }, null)
  >
  @Html.ActionLink(Model.App.Name, "Details", "Apps", new { id = Model.App.Key }, null)
  > Edit
</div>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
  @Html.ValidationSummary(true)
  <fieldset>
    <legend>App Details</legend>
    <div class="editor-label">
      <label for="name">
        Name</label>
    </div>
    <div class="editor-field">
      <input type="text" name="name" value="@Model.App.Name" />
      @Html.ValidationMessage("name")
    </div>
    <div class="editor-label">
      <label for="deploymentDirectory">
        Deployment Directory</label>
    </div>
    <div class="editor-field">
      <input type="text" name="deploymentDirectory" value="@Model.App.DeploymentDirectory" />
      @Html.ValidationMessage("deploymentDirectory")
    </div>
    <div class="editor-label">
      <label for="majorVersion">
        Major Version</label>
    </div>
    <div class="editor-field">
      <input type="text" name="majorVersion" value="@Model.App.MajorVersion" />
      @Html.ValidationMessage("majorVersion")
    </div>
    <div class="editor-label">
      <label for="revision">
        Revision</label>
    </div>
    <div class="editor-field">
      <input type="text" name="revision" value="@Model.App.Revision" />
      @Html.ValidationMessage("revision")
    </div>
    <p>
      <input type="submit" value="Save" />
      @Html.ActionLink("Cancel", "Details", new { id = Model.App.Key })
    </p>
  </fieldset>
}
