@model Plywood.Sawmill.Models.TargetDetails
@{
  ViewBag.Title = "Create Target";
}
<div class="breadcrumbs">
  @Html.ActionLink("Groups", "Index", "Groups")
  > @Html.ActionLink(Model.Group.Name, "Details", "Groups", new { id = Model.Group.Key }, null)
  > @Html.ActionLink("Targets", "Index", "Targets", new { gid = Model.Group.Key }, null)
  > Create Target
</div>
<h2>
  Create Target</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
  @Html.ValidationSummary(true)
  <fieldset>
    <legend>Target Details</legend>
    <input type="hidden" name="gid" value="@Model.Target.GroupKey" />
    <div class="editor-label">
      <label for="name">
        Name</label>
    </div>
    <div class="editor-field">
      <input type="text" name="name" value="@Model.Target.Name" />
      @Html.ValidationMessage("name")
    </div>
    <p>
      <input type="submit" value="Create" />
    </p>
  </fieldset>
}
<div>
  @Html.ActionLink("Back to Targets", "Index", new { gid = Model.Group.Key })
</div>
